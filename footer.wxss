.footer-logo {
  position: absolute;
  z-index: 2;
  bottom: 0;
  width: 100%;
  height: 115rpx;
  display: flex;
  justify-content: center;
}

.footer-logo >image {
  width: 114rpx;
  height: 45rpx;
}

.footer {
  height: 152rpx;
  background: #333;
  border-top: 1px solid #979797;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0;
  z-index: 2;
}

.footer>button {
  width: 500rpx;
  height: 90rpx;
  background: rgba(253, 215, 62, 1);
  border-radius: 52rpx;
  font-size: 36rpx;
  margin: 0;
}

.footer .shareBtn {
  width: 87rpx;
  height: 87rpx;
  line-height: 87rpx;
  border-radius: 50%;
  margin-left: 43rpx;
}
