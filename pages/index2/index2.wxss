/* pages/index/index.wxss */

.index {
  color: #fff;
  position: fixed;
  width: 100%;
  height: 100%;
  background: #333;
  display: flex;
  flex-direction: column;
  align-items: center; /*垂直居中*//* justify-content: center; 水平居中 */
  box-sizing: border-box;
}

.index .header {
  height: 104rpx;
  margin-left: 21rpx;
  border-bottom: 2rpx solid #666;
  line-height: 136rpx;
  width: 100%;
  font-size: 28rpx;
  box-sizing: border-box;
}

.index .header image {
  height: 32rpx;
  width: 32rpx;
  margin-right: 9rpx;
  margin-bottom: -6rpx;
}

.index .header>view {
  height: 100%;
}

.index .header .left {
  float: left;
  color: #999;
}

.index .header .left2 {
  float: left;
  margin-left: 39rpx;
  color: #fdd73e;
  border-bottom: 1px solid #fdd73e;
}

.index .header .right {
  float: right;
  margin-right: 50rpx;
}

.index .base_currency {
  box-sizing: border-box;
  height: 222rpx;
  width: 100%;
  border-bottom: 1px solid rgba(17, 18, 68, 1);
  position: relative;
}

/* .country {
  height: 64rpx;
  width: 64rpx;
  float: left;
  margin: 0 35rpx 0 31rpx;
} */

.index .title {
  color: #999;
  font-size: 28rpx;
  margin-top: 43rpx;
  margin-bottom: 23rpx;
  height: 40rpx;
  margin-left: 21rpx;
  display: block;
}

.index .content {
  width: 100%;
  padding-left: 40rpx;
  padding-right: 40rpx;
  box-sizing: border-box;
  overflow: auto;
  margin-bottom: 152rpx;
  -webkit-overflow-scrolling: touch;
}

.index .content .content_header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 96rpx;
}

.index .content .left, .index .content .right {
  /* display: flex; */
  align-items: left;
}

.index .content .left >text {
  font-size: 28rpx;
}

.index .content .right >text {
  font-size: 28rpx;
  color: #f7d13d;
}

.jiantou {
  width: 15rpx;
  height: 28rpx;
  margin-left: 10rpx;
}

.edit {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.index .content .content_item {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.index .content .content_item .item {
  width: 320rpx;
  height: 320rpx;
  border-radius: 10px;
  background: rgba(255, 255, 255, 1);
  margin-bottom: 40rpx;
  position: relative;
  /* overflow: auto; */
}

.index .content .content_item .item .del {
  height: 30rpx;
  width: 30rpx;
  position: absolute;
  top: -14rpx;
  right: -14rpx;
  display: none;
}

.index .content .content_item .item.aciton .del {
  display: block;
}

.index .content .content_item .item.add {
  background: rgba(34, 34, 34, 1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.index .content .content_item .item.add >image {
  width: 64rpx;
  height: 64rpx;
}

.index .content .content_item .item .introduction {
  height: 125rpx;
  color: #333;
  background: #f7f7f7;
  border-radius: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 26rpx;
  padding-right: 32rpx;
}

.index .content .content_item .item .introduction .left {
  display: flex;
  flex-direction: column;
}

.index .content .content_item .item .introduction>image {
  width: 64rpx;
  height: 64rpx;
}

.index .content .content_item .item .detail {
  color: #666;
  font-size: 26rpx;
  padding-left: 26rpx;
  padding-right: 32rpx;
}

.index .content .content_item .item .detail .detail_item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.index .content .content_item .detail .detail_item text:last-child {
  color: #333;
}
